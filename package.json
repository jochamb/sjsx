{
  "name": "@jochamb/sjsx",
  "version": "0.0.21",
  "description": "stateless jsx",
  "author": "jochamb",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./jsx-runtime": "./dist/jsx-runtime.js",
    "./testing-library": "./dist/testing-library.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup src/index.ts src/jsx-runtime.ts src/testing-library.tsx --format esm --no-splitting --dts",
    "lint": "eslint \"{src,test}/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"{src,test}/**/*.{ts,tsx}\"",
    "precommit": "sort-package-json 'package.json' && git add .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "tsx --test \"test/**/*.test.{ts,tsx}\"",
    "test:only": "tsx --test-only --watch",
    "test:watch": "tsx --test --watch \"test/**/*.test.{ts,tsx}\"",
    "types": "tsc",
    "upgrade-packages": "npm-check-updates -p npm --interactive"
  },
  "lint-staged": {
    "*.{js,css,md,mdx,ts,tsx,json,yml,yaml}": "prettier --write",
    "*.js": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/node": "22.5.5",
    "@typescript-eslint/eslint-plugin": "7.13.0",
    "@typescript-eslint/parser": "7.13.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "npm-check-updates": "^16.14.20",
    "prettier": "3.3.2",
    "sort-package-json": "2.10.0",
    "tsup": "8.3.0",
    "tsx": "4.16.5",
    "typescript": "5.4.5"
  }
}
